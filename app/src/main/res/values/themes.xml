<resources>
    <!-- Base application theme. -->
    <style name="Theme.PixaPencil" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/holo_blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>

        <item name="colorPrimaryInverse">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryContainer">@android:color/holo_blue_dark</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>
        <item name="colorOnSecondaryContainer">@android:color/holo_blue_light</item>
        <item name="colorTertiary">@android:color/holo_blue_dark</item>
        <item name="colorOnTertiary">@android:color/holo_blue_dark</item>
        <item name="colorTertiaryContainer">@android:color/holo_blue_dark</item>
        <item name="colorOnTertiaryContainer">@android:color/holo_blue_dark</item>
        <item name="colorSurfaceVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnSurfaceVariant">@android:color/holo_blue_dark</item>
        <item name="colorSurfaceInverse">@android:color/holo_blue_dark</item>
        <item name="colorOnSurfaceInverse">@android:color/holo_blue_dark</item>
        <item name="colorOutline">@android:color/holo_blue_dark</item>
        <item name="colorErrorContainer">@android:color/holo_blue_dark</item>
        <item name="colorOnErrorContainer">@android:color/holo_blue_dark</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
    </style>
    <style name="Theme.PixaPencil.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PixaPencil.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PixaPencil.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
